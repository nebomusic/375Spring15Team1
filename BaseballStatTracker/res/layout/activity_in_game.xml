<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="0.1dp"
    android:paddingLeft="0.1dp"
    android:paddingRight="0.1dp"
    android:paddingTop="0.1dp"
    tools:context="com.example.baseballstattracker.InGame" >

    <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCCCCC" >

        <Button
            android:id="@+id/buttonInGameBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="handleClick"
            android:text="Back" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCCCCC" >

        <TextView
            android:id="@+id/textTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Team Name - Home/Away"
            android:textSize="25dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCCCCC" >

        <TextView
            android:id="@+id/textGameInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Date, Time, Location"
            android:textSize="15dp" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textNAME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:  " />

        <Spinner
            android:id="@+id/spinnerPlayer"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <ToggleButton
            android:id="@+id/toggleAddSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="+"
            android:textOn="-"
            android:textSize="25dp" />

    </TableRow>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical" />

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AB" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button" />

    </TableRow>

</LinearLayout>